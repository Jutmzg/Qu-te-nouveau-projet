{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <div class="container">
        <h1>Tous les articles : </h1>
        {% for article in articles %}
            <div>
                <h2>{{ loop.index }} / {{ article.title }} - Catégorie : {{ article.category.name }}</h2>
                <p>{{ article.content }}</p>
            </div>
        {% else %}
            Aucun article trouvé.
        {% endfor %}
        <a href="{{ path('app_index') }}">
            Back to homepage.
        </a>
    </div>
{% endblock %}