{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Tags</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.content }}</td>
                <td>{% for tag in article.tags %} {{ tag.name }} {% endfor %}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a>
                    {% if is_granted('ROLE_AUTHOR') %}
                        <a href="{{ path('article_edit', { 'id': article.id} ) }}">Éditer</a>
                    {%endif%}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas d'articles trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Éditer</a>
    </div>
{% endblock %}
