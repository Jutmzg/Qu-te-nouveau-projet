{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <li><a href="{{ path('tag_show', {'name' : tag.name}) }}">{{ tag.name }}</a></li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

    <a href="{{ path('article_index') }}">Retour Ã  la liste des articles</a>

    {% if is_granted('ROLE_AUTHOR') %}
    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
    {% endif %}
    {{ include('tag/_delete_form.html.twig') }}
    {{ include('category/_delete_form.html.twig') }}
    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
